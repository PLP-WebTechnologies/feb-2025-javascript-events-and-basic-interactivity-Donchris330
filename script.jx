// 1. Event Handling ğŸˆ
document.getElementById("colorBtn").addEventListener("click", () => {
  document.body.style.backgroundColor =
    "#" + Math.floor(Math.random() * 16777215).toString(16);
});

document.getElementById("hoverBox").addEventListener("mouseenter", () => {
  document.getElementById("hoverBox").textContent = "You hovered!";
});

document.getElementById("keyInput").addEventListener("keydown", (e) => {
  console.log(`You pressed: ${e.key}`);
});

document.getElementById("secretArea").addEventListener("dblclick", () => {
  alert("ğŸ‰ Secret double-click activated!");
});

// 2. Interactive Elements ğŸ®
const tabButtons = document.querySelectorAll(".tab");
const tabContent = document.getElementById("tabContent");

tabButtons.forEach((btn) => {
  btn.addEventListener("click", () => {
    tabContent.textContent = `You selected Tab ${btn.dataset.tab}`;
  });
});

// 3. Form Validation ğŸ“‹âœ…
document.getElementById("userForm").addEventListener("submit", function (e) {
  e.preventDefault();

  const email = document.getElementById("email");
  const password = document.getElementById("password");
  const message = document.getElementById("formMessage");

  if (!email.value.includes("@")) {
    message.textContent = "âŒ Invalid email format.";
    return;
  }

  if (password.value.length < 8) {
    message.textContent = "âŒ Password must be at least 8 characters.";
    return;
  }

  message.style.color = "green";
  message.textContent = "âœ… Form submitted successfully!";
});
